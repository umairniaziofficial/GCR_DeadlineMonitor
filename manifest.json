{
  "manifest_version": 3,
  "name": "Classroom Timer",
  "version": "1.0",
  "description": "Automatically converts Google Classroom due dates to real-time countdown timers",
  "permissions": ["activeTab"],
  "content_scripts": [{
    "matches": ["*://*.classroom.google.com/*"],
    "css": ["styles.css"],
    "js": ["content.js"]
  }],
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
